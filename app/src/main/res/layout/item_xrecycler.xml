<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loonggg="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@color/colorblue"
        android:layout_height="1dp">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#8DB6CD"
                android:id="@+id/card_view_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<com.shehuan.niv.NiceImageView-->

                        <!--android:id="@+id/team_person"-->
                        <!--android:layout_width="60dp"-->
                        <!--android:layout_height="60dp"-->
                        <!--android:src="@drawable/ic_person"-->
                        <!--app:border_color="#FFFFFF"-->
                        <!--app:border_width="2dp"-->
                        <!--app:is_circle="true"-->
                        <!--app:is_cover_src="true" />-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Aris"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/title_tv"
                            android:layout_width="120dp"
                            android:lines="2"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="晚上去吃烧烤嘛" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp">

                        <ImageView android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_circle"/>

                        <TextView
                            android:id="@+id/team_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="群聊" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="45dp"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="30dp"
                        android:id="@+id/team_picture"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/a"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp"
                        android:text="地点：太原市内" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间:2019-6-20晚上十点" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>